<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Socket_4I"
        xmlns:System="clr-namespace:System;assembly=mscorlib" x:Class="Socket_4I.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Label Content="Chatta con:" HorizontalAlignment="Left" Margin="10,4,0,0" VerticalAlignment="Top" Height="26" Width="78"/>
        <Button x:Name="btnAggiungi" Content="Aggiungi Contatto" HorizontalAlignment="Left" Margin="294,43,0,0" VerticalAlignment="Top" Height="47" Width="124" Click="btnAggiungi_Click"/>
        <ListBox x:Name="lstContatti" Margin="10,24,331,10" SelectionChanged="lstContatti_SelectionChanged"/>
        <Button x:Name="btnElimina" Content="Elimina Contatto" HorizontalAlignment="Left" Margin="294,105,0,0" VerticalAlignment="Top" Height="47" Width="124" IsEnabled="False" Click="btnElimina_Click"/>
        <Button x:Name="btnAvviaChat" Content="Avvia Chat" HorizontalAlignment="Left" Margin="294,228,0,0" VerticalAlignment="Top" Height="47" Width="124" IsEnabled="False" Click="btnAvviaChat_Click"/>


    </Grid>
</Window>
